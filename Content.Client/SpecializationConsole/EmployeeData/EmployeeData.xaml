<Control xmlns="https://spacestation14.io"
         MouseFilter="Stop">
    <GridContainer Columns="2"
                   HorizontalExpand="True"
                   Margin="8">
        <BoxContainer Orientation="Vertical"
                      SeparationOverride="5"
                      SetWidth="130">
            <Label Text="Name:" />
            <RichTextLabel Name="EmployeeNameLabel"
                           Margin="5 0 0 0" />
            <Label Text="Job:" />
            <RichTextLabel Name="EmployeeJobLabel"
                           Margin="5 0 0 0" />
            <Label Text="Specialization:" />
            <RichTextLabel Name="EmployeeSpecLabel"
                           Margin="5 0 0 0" />
        </BoxContainer>
        <BoxContainer Name="EntityViewBox"
                      Access="Public"
                      HorizontalExpand="True"
                      VerticalExpand="True"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Right" />
    </GridContainer>
</Control>
